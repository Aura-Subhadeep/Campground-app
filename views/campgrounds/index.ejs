<% layout('/layouts/boilerplate')%>
<h1 class="py-5 text-center">All campgrounds</h1>
    <div class="text-center pb-5">
        <a href="/campgrounds/new" class="text-decoration-none btn btn-primary">Create a New campground</a>
    </div>
<% for (let campground of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="cold-md-4">
                <img src="<%= campground.image %>" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title"><%= campground.title%></h3>
                    <h5 class="text-muted"><%= campground.location%></h5>
                    <p class="card-text"><%= campground.description%></p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View it Now</a>
                </div>
            </div>
        </div>
    </div>
<% } %>