<% layout('/layouts/boilerplate')%>
    <h1 class="py-2"><%=campground.title%></h1>
    <h2 class="py-2"><%=campground.location%></h2>
    <h4 class="py-2">$<%=campground.price%></h4>
    <h4 class="py-2"><%=campground.description%></h4>
    <img src="<%=campground.image%>" class="img-fluid">
    <div class="py-3">
        <a href="/campgrounds/<%= campground._id %>/edit">Edit the Campground</a>
    </div>
    <div class="py-3">
        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
            <button class="btn btn-primary">Delete the campground</button>
        </form>
    </div>
    <footer>
        <a href="/campgrounds">Go back to all campgrounds</a>
    </footer>