<% layout('/layouts/boilerplate')%>
<div class="row">
    <div class="col-6 offset-3 py-5">
        <div class="card mb-8" style="width: 18rem;">
            <img src="<%=campground.image%>" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%=campground.title%></h5>
                <p class="card-text"><%=campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%=campground.location%></li>
                <li class="list-group-item">$<%=campground.price%></li>
            </ul>
            <div class="card-body d-flex justify-content-around">
                <div>
                    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-primary">Delete</button>
                    </form>
                </div>
                <div>
                    <a class="btn btn-primary px-4" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                </div>
            </div>
        </div>
        <h3 class="text-center mt-4">Leave a review</h3>
        <form action="/campgrounds/<%=campground._id%>/reviews" method="POST">
            <div>
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range my-2" type="range" min="1" max="5" value="0" name="review[rating]" id="rating">
            </div>
            <div class="my-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="2"></textarea>
            </div>
            <button class="btn-success btn">Submit</button>
        </form>
        <div class="py-3">
            <a href="/campgrounds">Go back to all campgrounds</a>
        </div>
    </div>
</div>